<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="ShapeAppearance.Arophix.Card" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerFamily">rounded</item>

        <item name="cornerSizeTopLeft">2dp</item>
        <item name="cornerSizeTopRight">2dp</item>
        <item name="cornerSizeBottomRight">2dp</item>
        <item name="cornerSizeBottomLeft">2dp</item>
    </style>

    <style name="ShapeAppearance.Arophix.Button" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerFamily">rounded</item>

        <item name="cornerSizeTopLeft">@dimen/button_corner_radius</item>
        <item name="cornerSizeTopRight">@dimen/button_corner_radius</item>
        <item name="cornerSizeBottomRight">@dimen/button_corner_radius</item>
        <item name="cornerSizeBottomLeft">@dimen/button_corner_radius</item>
    </style>

    <!-- buttons -->
    <dimen name="button_corner_radius">12dp</dimen>

</resources>